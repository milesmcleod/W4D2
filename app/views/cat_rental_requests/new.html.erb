<form action="<%=cat_rental_requests_url%>" method="post">

  <select name="cat_rental_request[cat_id]">
    <option disabled selected>--Select Cat--</option>
    <% @cats.each do |cat| %>
      <option value="<%= cat.id %>"><%= cat.name %></option>
    <% end %>
  </select>
  <br><br>
  <label for="start">Start Date</label>
  <input id="start" type="date" name="cat_rental_request[start_date]">
  <br><br>
  <label for="end">End Date</label>
  <input id="end" type="date" name="cat_rental_request[end_date]">

  <br> <br>
  <input type="submit" name="" value="Request Rental">
</form>
